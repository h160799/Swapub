<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/yellow_FCF0D2"
        tools:context="com.johnny.swapub.myClub.MyClubFragment">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/yellow_F8E2A9"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="80dp"
        android:background="@color/white_E3DED8"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:gravity="center"
        android:includeFontPadding="false"
        android:text="我的社團"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:fontFamily="@font/pt_sans"
        android:layout_marginTop="20dp"
        app:layout_constraintBottom_toTopOf="@id/line"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/go_back"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/go_back"
        android:layout_marginStart="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/title"
        app:layout_constraintBottom_toBottomOf="@id/title"/>

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:fontFamily="@font/pt_sans"
            android:textSize="15sp"
            android:textStyle="bold"
            android:gravity="center"
            android:text="Johnny Lin"
            android:layout_marginStart="10dp"
            app:layout_constraintTop_toTopOf="@id/head"
            app:layout_constraintBottom_toBottomOf="@id/head"
            app:layout_constraintStart_toEndOf="@id/head"/>

        <com.github.florent37.shapeofview.shapes.CircleView
            android:id="@+id/head"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:elevation="4dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="18dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/line">

            <ImageView
                android:id="@+id/user_head"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/me" />

        </com.github.florent37.shapeofview.shapes.CircleView>

        <EditText
            android:id="@+id/make_a_wish"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:background="@color/yellow_FCF0D2"
            android:fontFamily="@font/pt_sans"
            android:textSize="15sp"
            android:gravity="start"
            android:inputType="text"
            android:hint="許個願望吧..."
            android:outlineSpotShadowColor="@color/black"
            android:textColorHint="@color/gray_646464"
            android:layout_marginTop="20dp"
            android:layout_marginStart="5dp"
            app:layout_constraintTop_toBottomOf="@id/head"
            app:layout_constraintStart_toStartOf="@id/head"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>