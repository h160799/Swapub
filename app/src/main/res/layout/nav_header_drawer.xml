<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />
        <import type="android.text.TextUtils" />
        <variable
            name="viewModel"
            type="com.johnny.swapub.MainViewModel" />
        <variable
            name="userManeager"
            type="com.johnny.swapub.util.UserManager" />


    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="280dp"
        android:layout_height="200dp"
        android:background="@color/yellow_F8E2A9"
        android:elevation="1dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray_999999"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <com.github.florent37.shapeofview.shapes.CircleView
            android:id="@+id/image_drawer_avatar"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:scaleType="centerCrop"
            android:layout_marginTop="90dp"
            app:layout_constraintStart_toStartOf="@id/image_drawer_name"
            app:layout_constraintEnd_toEndOf="@id/image_drawer_name"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/user_head"
                imageUrl="@{viewModel.getUserData.image}"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:src="@drawable/me" />

        </com.github.florent37.shapeofview.shapes.CircleView>


        <TextView
            android:id="@+id/image_drawer_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/pt_sans"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            android:text="@{viewModel.getUserData.name}"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/image_drawer_avatar"
            tools:text="Johnny Lin" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>

