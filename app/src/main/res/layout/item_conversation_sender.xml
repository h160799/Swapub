<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <com.mikhaellopez.circularimageview.CircularImageView
            android:id="@+id/sender_image"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/ic_nav_profile_selected"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:scaleType="centerCrop"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginLeft="10dp" />

        <TextView
            android:id="@+id/sender_text"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:maxWidth="180dp"
            android:background="@drawable/bg_round_button"
            android:text="123456789123456"
            android:gravity="center"
            app:layout_constraintTop_toTopOf="@id/sender_image"
            app:layout_constraintStart_toEndOf="@id/sender_image"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp" />

        <TextView
            android:id="@+id/sender_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="11-30 16:20"
            android:textSize="7sp"
            android:fontFamily="@font/pt_sans"
            android:layout_marginTop="5dp"
            app:layout_constraintStart_toStartOf="@id/sender_text"
            app:layout_constraintTop_toBottomOf="@id/sender_text"/>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>