<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
<variable
    name="viewModel"
    type="com.johnny.swapub.messageHistory.conversation.ConversationViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/blue_gray"
        tools:context=".detail.DetailFragment">

        <View
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="80dp"
            android:background="@color/white_E3DED8"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/response_name"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            tools:text="Jolin Tsai"
            android:gravity="center"
            android:includeFontPadding="false"
            android:textColor="@color/white_E3DED8"
            android:textSize="24sp"
            android:textStyle="bold"
            app:fontFamily="@font/pt_sans"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/line" />

        <ImageView
            android:id="@+id/go_back"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/go_back"
            android:layout_marginStart="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/line"
            android:layout_marginLeft="20dp" />

        <ImageView
            android:id="@+id/product_image"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@color/white_E3DED8"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/line"
            android:layout_marginLeft="20dp" />



        <TextView
            android:id="@+id/product_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:text="MacBook Pro"
            android:fontFamily="@font/pt_sans"
            android:textColor="@color/white_E3DED8"
            android:textStyle="bold"
            android:gravity="top"
            android:layout_marginStart="15dp"
            app:layout_constraintStart_toEndOf="@id/product_image"
            app:layout_constraintTop_toTopOf="@id/product_image"
            android:layout_marginLeft="15dp" />



        <TextView
            android:id="@+id/product_bac1"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:background="@color/white_E3DED8"
            app:layout_constraintStart_toStartOf="@id/product_title"
            app:layout_constraintBottom_toBottomOf="@id/product_image" />

        <TextView
            android:layout_width="68dp"
            android:layout_height="28dp"
            android:background="@color/blue_gray"
            android:text="交易條件"
            android:textSize="15sp"
            android:fontFamily="@font/pt_sans"
            android:textColor="@color/white_E3DED8"
            android:gravity="center"
            app:layout_constraintStart_toStartOf="@id/product_bac1"
            app:layout_constraintEnd_toEndOf="@id/product_bac1"
            app:layout_constraintTop_toTopOf="@id/product_bac1"
            app:layout_constraintBottom_toBottomOf="@id/product_bac1"/>



        <TextView
            android:id="@+id/trading_style"
            android:layout_width="200dp"
            android:layout_height="0dp"
            android:textSize="13sp"
            android:text="日文教學 40 小時"
            android:fontFamily="@font/pt_sans"
            android:textColor="@color/white_E3DED8"
            android:layout_marginBottom="5dp"
            android:layout_marginStart="10dp"
            app:layout_constraintStart_toEndOf="@id/product_bac1"
            app:layout_constraintBottom_toBottomOf="@id/product_bac1"
            android:layout_marginLeft="10dp" />



        <TextView
            android:id="@+id/choose_trading_style"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:background="@drawable/bg_round_button"
            android:textSize="12sp"
            android:gravity="center"
            android:textStyle="bold"
            android:text="選擇成交方式"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/trading_style"
            android:layout_marginRight="20dp" />


        <View
            android:id="@+id/line2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:background="@color/white_E3DED8"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/choose_trading_style"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView_conversation"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:reverseLayout="true"
            app:stackFromEnd="true"
            app:layout_constraintTop_toBottomOf="@id/line2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/line3"
            tools:listitem="@layout/item_conversation"/>


        <View
            android:id="@+id/line3"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="60dp"
            android:background="@color/white_E3DED8"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <EditText
            android:id="@+id/editText_bac"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_marginStart="50dp"
            android:hint="  輸入訊息"
            android:text="@={viewModel.message.text}"
            android:background="@drawable/bg_round_button"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/line3"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginLeft="20dp" />



        <ImageView
            android:id="@+id/enter_text"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/go_back"
            android:layout_marginStart="10dp"
            app:layout_constraintStart_toEndOf="@id/editText_bac"
            app:layout_constraintTop_toBottomOf="@id/line3"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginLeft="20dp" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/add_photos"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/go_back"
            android:layout_marginEnd="10dp"
            android:tint="@color/black"
            app:fabSize="mini"
            app:layout_constraintEnd_toStartOf="@id/editText_bac"
            app:layout_constraintTop_toBottomOf="@id/line3"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginLeft="20dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>