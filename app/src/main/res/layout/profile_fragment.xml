<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/blue_gray"
        tools:context="com.johnny.swapub.profile.ProfileFragment">


        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:fontFamily="@font/pt_sans"
            android:textSize="25sp"
            android:textStyle="bold"
            android:gravity="center"
            android:text="Johnny Lin"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <com.github.florent37.shapeofview.shapes.CircleView
            android:id="@+id/head"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:elevation="4dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="18dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/name">

            <ImageView
                android:id="@+id/user_head"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/me" />

        </com.github.florent37.shapeofview.shapes.CircleView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/gray_646464"
            android:fontFamily="@font/pt_sans"
            android:textSize="15sp"
            android:gravity="center"
            android:text="許個願望吧..."
            android:layout_marginStart="10dp"
            app:layout_constraintTop_toTopOf="@id/head"
            app:layout_constraintBottom_toBottomOf="@id/head"
            app:layout_constraintStart_toEndOf="@id/head"/>

        <View
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/white_E3DED8"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/head"
            android:layout_marginTop="10dp"/>


        <TextView
            android:id="@+id/my_trading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/pt_sans"
            android:gravity="center"
            android:text="我的貨品"
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/line3"
            app:layout_constraintTop_toBottomOf="@id/line"
            app:layout_constraintBottom_toTopOf="@id/line2"/>

        <TextView
            android:id="@+id/my_club"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/pt_sans"
            android:gravity="center"
            android:text="我的社團"
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/line3"
            app:layout_constraintEnd_toStartOf="@id/line4"
            app:layout_constraintTop_toBottomOf="@id/line"
            app:layout_constraintBottom_toTopOf="@id/line2" />


        <TextView
            android:id="@+id/my_favorite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/pt_sans"
            android:gravity="center"
            android:text="我的收藏"
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/line4"
            app:layout_constraintTop_toBottomOf="@id/line"
            app:layout_constraintBottom_toTopOf="@id/line2"/>

        <View
            android:id="@+id/line2"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="@color/white_E3DED8"
            android:layout_marginTop="30dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/line"/>

        <View
            android:id="@+id/line3"
            android:layout_width="3dp"
            android:layout_height="30dp"
            android:background="@color/white_E3DED8"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/line4"
            app:layout_constraintTop_toBottomOf="@id/line"
            app:layout_constraintBottom_toBottomOf="@id/line2"/>

        <View
            android:id="@+id/line4"
            android:layout_width="3dp"
            android:layout_height="30dp"
            android:background="@color/white_E3DED8"
            app:layout_constraintStart_toEndOf="@id/line3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/line"
            app:layout_constraintBottom_toBottomOf="@id/line2"/>


        <ImageView
            android:id="@+id/news_image"
            android:layout_width="350dp"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/news_content"
            android:src="@drawable/desk"/>

        <com.mikhaellopez.circularimageview.CircularImageView
            android:id="@+id/user_image"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="30dp"
            app:layout_constraintTop_toBottomOf="@id/line2"
            app:layout_constraintStart_toStartOf="@id/news_image"
            android:src="@drawable/me" />

        <TextView
            android:id="@+id/mews_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13dp"
            android:fontFamily="@font/pt_sans"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginStart="5dp"
            app:layout_constraintStart_toEndOf="@id/user_image"
            app:layout_constraintTop_toTopOf="@id/user_image"
            android:text="Johnny Lin"
            android:layout_marginLeft="5dp" />

        <TextView
            android:id="@+id/message_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="9dp"
            android:fontFamily="@font/pt_sans"
            android:textColor="@color/black"
            android:layout_marginStart="5dp"
            app:layout_constraintStart_toEndOf="@id/user_image"
            app:layout_constraintBottom_toBottomOf="@id/user_image"
            android:text="2 小時"
            android:layout_marginLeft="5dp" />

        <TextView
            android:id="@+id/news_content"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:fontFamily="@font/pt_sans"
            android:textColor="@color/black"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toStartOf="@id/user_image"
            app:layout_constraintTop_toBottomOf="@id/user_image"
            android:text="招募「志工」，協助聖誕活動 3小時．以 「 兒童書桌」作為交易．" />

        <View
            android:layout_width="match_parent"
            android:layout_height="6dp"
            android:background="@color/white_E3DED8"
            android:layout_marginTop="15dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/news_image"/>






    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>