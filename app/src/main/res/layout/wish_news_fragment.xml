<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/blue_gray"
        tools:context="com.johnny.swapub.wishNews.WishNewsFragment">

        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:id="@+id/layout_swipe_refresh_wish_news_item"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/item_wish_news_grid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/blue_gray">

                <ImageView
                    android:id="@+id/news_image"
                    android:layout_width="350dp"
                    android:layout_height="200dp"
                    android:scaleType="centerCrop"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginTop="10dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/news_content"
                    android:src="@drawable/desk" />

                <com.mikhaellopez.circularimageview.CircularImageView
                    android:id="@+id/user_head"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="20dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="@id/news_image"
                    android:src="@drawable/me" />

                <TextView
                    android:id="@+id/mews_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13dp"
                    android:fontFamily="@font/pt_sans"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_marginStart="5dp"
                    app:layout_constraintStart_toEndOf="@id/user_head"
                    app:layout_constraintTop_toTopOf="@id/user_head"
                    android:text="Johnny Lin"
                    android:layout_marginLeft="5dp" />

                <TextView
                    android:id="@+id/message_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="9dp"
                    android:fontFamily="@font/pt_sans"
                    android:textColor="@color/black"
                    android:layout_marginStart="5dp"
                    app:layout_constraintStart_toEndOf="@id/user_head"
                    app:layout_constraintBottom_toBottomOf="@id/user_head"
                    android:text="2 小時"
                    android:layout_marginLeft="5dp" />

                <TextView
                    android:id="@+id/news_content"
                    android:layout_width="350dp"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:fontFamily="@font/pt_sans"
                    android:textColor="@color/black"
                    android:layout_marginTop="10dp"
                    app:layout_constraintStart_toStartOf="@id/user_head"
                    app:layout_constraintTop_toBottomOf="@id/user_head"
                    android:text="招募「志工」，協助聖誕活動 3小時．以 「 兒童書桌」作為交易．" />

                <View
                    android:id="@+id/line"
                    android:layout_width="match_parent"
                    android:layout_height="6dp"
                    android:background="@color/white_E3DED8"
                    android:layout_marginTop="15dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/news_image"/>






                <ImageView
                    android:id="@+id/news_image2"
                    android:layout_width="350dp"
                    android:layout_height="200dp"
                    android:scaleType="centerCrop"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginTop="10dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/news_content2"
                    android:src="@drawable/money" />

                <com.mikhaellopez.circularimageview.CircularImageView
                    android:id="@+id/user_head2"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="20dp"
                    app:layout_constraintTop_toBottomOf="@id/line"
                    app:layout_constraintStart_toStartOf="@id/news_image2"
                    android:src="@drawable/picachu" />

                <TextView
                    android:id="@+id/mews_name2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13dp"
                    android:fontFamily="@font/pt_sans"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_marginStart="5dp"
                    app:layout_constraintStart_toEndOf="@id/user_head2"
                    app:layout_constraintTop_toTopOf="@id/user_head2"
                    android:text="Eric Chang"
                    android:layout_marginLeft="5dp" />

                <TextView
                    android:id="@+id/message_time2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="9dp"
                    android:fontFamily="@font/pt_sans"
                    android:textColor="@color/black"
                    android:layout_marginStart="5dp"
                    app:layout_constraintStart_toEndOf="@id/user_head2"
                    app:layout_constraintBottom_toBottomOf="@id/user_head2"
                    android:text="7 小時"
                    android:layout_marginLeft="5dp" />

                <TextView
                    android:id="@+id/news_content2"
                    android:layout_width="350dp"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:fontFamily="@font/pt_sans"
                    android:textColor="@color/black"
                    android:layout_marginTop="10dp"
                    app:layout_constraintStart_toStartOf="@id/user_head2"
                    app:layout_constraintTop_toBottomOf="@id/user_head2"
                    android:text="想要 Iphone 12．以 「NT 26000」作為交易．" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="6dp"
                    android:background="@color/white_E3DED8"
                    android:layout_marginTop="15dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/news_image2"/>


            </androidx.constraintlayout.widget.ConstraintLayout>



<!--        <androidx.recyclerview.widget.RecyclerView-->
<!--            android:id="@+id/recycler_wish_news_item"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="match_parent"-->
<!--            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"-->
<!--            app:spanCount="1"-->
<!--            tools:itemCount="15"-->
<!--            tools:listitem="@layout/item_wish_news_grid">-->

<!--        </androidx.recyclerview.widget.RecyclerView>-->

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>






    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>