<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.johnny.swapub.product.ProductViewModel" />
    </data>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/blue_gray"
        tools:context=".detail.DetailFragment">

        <View
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="80dp"
            android:background="@color/white_E3DED8"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:gravity="center"
            android:includeFontPadding="false"
            android:text="交易物件頁面"
            android:textColor="@color/white_E3DED8"
            android:textSize="20sp"
            android:textStyle="bold"
            app:fontFamily="@font/pt_sans"
            app:layout_constraintBottom_toTopOf="@id/line"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/go_back"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:src="@drawable/go_back"
            app:layout_constraintBottom_toTopOf="@id/line"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:id="@+id/recycler_detail"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/line"
        app:layout_constraintBottom_toBottomOf="parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_detail_gallery"
            android:layout_width="360dp"
            android:layout_height="360dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:background="@color/white_E3DED8"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:listitem="@layout/item_product_gallery" />

        <com.mikhaellopez.circularimageview.CircularImageView
            android:id="@+id/user_head"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="340dp"
            app:imageUrl="@{viewModel.userDetail.image}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/recycler_detail_gallery" />

        <TextView
            android:id="@+id/product_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/pt_sans"
            android:text="@{viewModel.userDetail.name}"
            android:textColor="@color/white_E3DED8"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/user_head"
            app:layout_constraintTop_toBottomOf="@id/recycler_detail_gallery" />


        <TextView
            android:id="@+id/product_country"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:fontFamily="@font/pt_sans"
            android:text="@{viewModel.userDetail.place.country}"
            android:textColor="@color/white_E3DED8"
            android:textSize="13sp"
            app:layout_constraintBottom_toBottomOf="@id/user_head"
            app:layout_constraintStart_toEndOf="@id/user_head"
            tools:text="台灣" />


        <TextView
            android:id="@+id/product_city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="10dp"
            android:fontFamily="@font/pt_sans"
            android:text="@{viewModel.userDetail.place.city}"
            android:textColor="@color/white_E3DED8"
            android:textSize="13sp"
            app:layout_constraintBottom_toBottomOf="@id/product_country"
            app:layout_constraintStart_toEndOf="@id/product_country"
            tools:text="台中市" />


        <TextView
            android:id="@+id/product_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/pt_sans"
            android:text="2 小時"
            android:textColor="@color/white_E3DED8"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="@id/recycler_detail_gallery"
            app:layout_constraintTop_toTopOf="@id/product_name" />

        <View
            android:id="@+id/line2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="15dp"
            android:background="@color/white_E3DED8"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/user_head" />


                <TextView
                    android:id="@+id/product_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@fon30t/pt_sans"
                    android:text="@{viewModel.productDetail.productTitle}"
                    android:textColor="@color/white_E3DED8"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="@id/recycler_detail_gallery"
                    app:layout_constraintTop_toTopOf="@id/line2" />

                <TextView
                    android:id="@+id/product_bac1"
                    android:layout_width="82dp"
                    android:layout_height="28dp"
                    android:layout_marginTop="15dp"
                    android:background="@color/white_E3DED8"
                    app:layout_constraintStart_toStartOf="@id/product_title"
                    app:layout_constraintTop_toBottomOf="@id/product_title" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/blue_gray"
                    android:fontFamily="@font/pt_sans"
                    android:gravity="center"
                    android:text="商品描述"
                    android:textColor="@color/white_E3DED8"
                    android:textSize="20sp"
                    app:layout_constraintBottom_toBottomOf="@id/product_bac1"
                    app:layout_constraintEnd_toEndOf="@id/product_bac1"
                    app:layout_constraintStart_toStartOf="@id/product_bac1"
                    app:layout_constraintTop_toTopOf="@id/product_bac1" />

                <TextView
                    android:id="@+id/product_description"
                    android:layout_width="350dp"
                    android:layout_height="0dp"
                    android:layout_marginTop="15dp"
                    android:fontFamily="@font/pt_sans"
                    android:text="@{viewModel.productDetail.description}"
                    android:textColor="@color/white_E3DED8"
                    android:textSize="15sp"
                    app:layout_constraintStart_toStartOf="@id/product_bac1"
                    app:layout_constraintTop_toBottomOf="@id/product_bac1" />

                <TextView
                    android:id="@+id/product_bac2"
                    android:layout_width="82dp"
                    android:layout_height="28dp"
                    android:layout_marginTop="15dp"
                    android:background="@color/white_E3DED8"
                    app:layout_constraintStart_toStartOf="@id/product_description"
                    app:layout_constraintTop_toBottomOf="@id/product_description" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/blue_gray"
                    android:fontFamily="@font/pt_sans"
                    android:text="交易條件"
                    android:textColor="@color/white_E3DED8"
                    android:textSize="20sp"
                    app:layout_constraintBottom_toBottomOf="@id/product_bac2"
                    app:layout_constraintEnd_toEndOf="@id/product_bac2"
                    app:layout_constraintStart_toStartOf="@id/product_bac2"
                    app:layout_constraintTop_toTopOf="@id/product_bac2" />

                <TextView
                    android:id="@+id/trading_style"
                    android:layout_width="350dp"
                    android:layout_height="0dp"
                    android:layout_marginTop="15dp"
                    android:fontFamily="@font/pt_sans"
                    android:text="@{viewModel.productDetail.tradingStyle}"
                    android:textColor="@color/white_E3DED8"
                    android:textSize="15sp"
                    app:layout_constraintStart_toStartOf="@id/product_bac2"
                    app:layout_constraintTop_toBottomOf="@id/product_bac2" />

                <ImageView
                    android:layout_width="104dp"
                    android:layout_height="34dp"
                    android:background="@drawable/bg_round_button"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/trading_style" />

                <TextView
                    android:id="@+id/interest_to_trade"
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/bg_round_button"
                    android:gravity="center"
                    android:text="我有興趣交易"
                    android:textSize="16sp"
                    android:fontFamily="@font/pt_sans"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/trading_style" />

                <ImageView
                    android:id="@+id/add_favorite"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginEnd="15dp"
                    android:src="@{viewModel.isFavor == true ? @drawable/heart_red : @drawable/heart}"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/product_title" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>