<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/blue_gray"
        tools:context=".detail.DetailFragment">

        <View
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="80dp"
            android:background="@color/white_E3DED8"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="交易物件頁面"
            android:gravity="center"
            android:includeFontPadding="false"
            android:textColor="@color/white_E3DED8"
            android:textSize="20sp"
            android:textStyle="bold"
            app:fontFamily="@font/pt_sans"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/line" />

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/go_back"
            android:layout_marginStart="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/line"
            android:layout_marginLeft="20dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_detail_gallery"
            android:layout_width="350dp"
            android:layout_height="300dp"
            android:orientation="horizontal"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            android:layout_marginTop="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/line"
            android:background="@color/white_E3DED8"
            tools:listitem="@layout/item_product_gallery"/>
<!--        app:images="@{viewModel.product.images}"-->

        <com.mikhaellopez.circularimageview.CircularImageView
            android:id="@+id/user_head"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/ic_nav_profile_selected"
            android:layout_marginTop="280dp"
            android:layout_marginStart="50dp"
            app:layout_constraintTop_toTopOf="@id/recycler_detail_gallery"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="70dp" />

        <TextView
            android:id="@+id/product_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:fontFamily="@font/pt_sans"
            android:textColor="@color/white_E3DED8"
            android:textStyle="bold"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            app:layout_constraintStart_toEndOf="@id/user_head"
            app:layout_constraintTop_toBottomOf="@id/recycler_detail_gallery"
            android:layout_marginLeft="10dp"
            android:text="Johnny Lin" />

        <TextView
            android:id="@+id/product_place"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:fontFamily="@font/pt_sans"
            android:textColor="@color/white_E3DED8"
            android:layout_marginStart="10dp"
            app:layout_constraintStart_toEndOf="@id/user_head"
            app:layout_constraintBottom_toBottomOf="@id/user_head"
            android:text="台灣 台中市"
            android:layout_marginLeft="10dp" />

        <TextView
            android:id="@+id/product_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:fontFamily="@font/pt_sans"
            android:textColor="@color/white_E3DED8"
            android:layout_marginTop="5dp"
            app:layout_constraintEnd_toEndOf="@id/recycler_detail_gallery"
            app:layout_constraintTop_toTopOf="@id/product_name"
            android:text="2 小時"
            android:layout_marginLeft="10dp" />

        <View
            android:id="@+id/line2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="15dp"
            android:background="@color/white_E3DED8"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/user_head"/>

        <ScrollView
            android:id="@+id/recycler_detail"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            app:layout_constraintEnd_toEndOf="@id/recycler_detail_gallery"
            app:layout_constraintStart_toStartOf="@id/recycler_detail_gallery"
            app:layout_constraintTop_toBottomOf="@id/line2">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/product_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="30sp"
                    android:fontFamily="@fon30t/pt_sans"
                    android:textColor="@color/white_E3DED8"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="20dp"
                    android:text="MacBook Pro"/>

                <TextView
                    android:id="@+id/product_bac1"
                    android:layout_width="82dp"
                    android:layout_height="28dp"
                    android:background="@color/white_E3DED8"
                    android:layout_marginTop="15dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/product_title" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/blue_gray"
                    android:text="商品描述"
                    android:textSize="20sp"
                    android:gravity="center"
                    android:fontFamily="@font/pt_sans"
                    android:textColor="@color/white_E3DED8"
                    app:layout_constraintStart_toStartOf="@id/product_bac1"
                    app:layout_constraintEnd_toEndOf="@id/product_bac1"
                    app:layout_constraintTop_toTopOf="@id/product_bac1"
                    app:layout_constraintBottom_toBottomOf="@id/product_bac1"/>

                <TextView
                    android:id="@+id/product_description"
                    android:layout_width="350dp"
                    android:layout_height="0dp"
                    android:text="Retina 顯示器 13.3 吋\n記憶體 最多可達 16GB\n儲存裝置 最多可達 2TB"
                    android:textSize="15sp"
                    android:fontFamily="@font/pt_sans"
                    android:textColor="@color/white_E3DED8"
                    android:layout_marginTop="15dp"
                    app:layout_constraintStart_toStartOf="@id/product_bac1"
                    app:layout_constraintTop_toBottomOf="@id/product_bac1"/>

                <TextView
                    android:id="@+id/product_bac2"
                    android:layout_width="82dp"
                    android:layout_height="28dp"
                    android:background="@color/white_E3DED8"
                    android:layout_marginTop="15dp"
                    app:layout_constraintStart_toStartOf="@id/product_description"
                    app:layout_constraintTop_toBottomOf="@id/product_description" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/blue_gray"
                    android:text="交易方式"
                    android:textSize="20sp"
                    android:fontFamily="@font/pt_sans"
                    android:textColor="@color/white_E3DED8"
                    app:layout_constraintStart_toStartOf="@id/product_bac2"
                    app:layout_constraintEnd_toEndOf="@id/product_bac2"
                    app:layout_constraintTop_toTopOf="@id/product_bac2"
                    app:layout_constraintBottom_toBottomOf="@id/product_bac2"/>

                <TextView
                    android:id="@+id/trading_style"
                    android:layout_width="350dp"
                    android:layout_height="0dp"
                    android:text="日文教學 40 小時"
                    android:textSize="15sp"
                    android:fontFamily="@font/pt_sans"
                    android:textColor="@color/white_E3DED8"
                    android:layout_marginTop="15dp"
                    app:layout_constraintStart_toStartOf="@id/product_bac2"
                    app:layout_constraintTop_toBottomOf="@id/product_bac2"/>

                <ImageView
                    android:layout_width="104dp"
                    android:layout_height="34dp"
                    android:background="@drawable/bg_round_button_black"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/trading_style"
                    app:layout_constraintBottom_toBottomOf="parent"/>



                <TextView
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:background="@drawable/bg_round_button"
                    android:text="我有興趣"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/trading_style"
                    app:layout_constraintBottom_toBottomOf="parent"/>

                <ImageView
                    android:id="@+id/add_favorite"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/heart"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/product_title"/>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>