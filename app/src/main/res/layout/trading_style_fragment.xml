<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/blue_gray"
        tools:context=".messageHistory.TradingStyle.TradingStyleFragment">

        <View
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="80dp"
            android:background="@color/white_E3DED8"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:gravity="center"
            android:includeFontPadding="false"
            android:text="選擇交易方式"
            android:textColor="@color/white_E3DED8"
            android:textSize="20sp"
            android:textStyle="bold"
            app:fontFamily="@font/pt_sans"
            app:layout_constraintBottom_toTopOf="@id/line"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/go_back"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:src="@drawable/go_back"
            app:layout_constraintBottom_toTopOf="@id/line"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/line">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="0dp">

                <RadioGroup
                    android:id="@+id/radios_choose_trading_style"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="24dp"
                    android:theme="@style/PaymentColorTheme"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">
<!--                                    android:checkedButton="@={viewModel.selectedTimeRadio}"-->

                    <RadioButton
                        android:id="@+id/radio_trading_by_goods"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/pt_sans"
                        android:gravity="center"
                        android:letterSpacing="0.15"
                        android:text="@string/trading_product"
                        android:textColor="@color/white_E3DED8"
                        android:textSize="16sp" />
                    <!--                android:textColor="@{viewModel.invalidCheckout != null ? (viewModel.selectedTimeRadio == 0 ? @color/red_d0021b : @color/white_E3DED8) : @color/white_E3DED8}"-->

                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="20dp"
                        android:background="@color/white_E3DED8" />

                    <EditText
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="20dp"
                        android:background="@color/white_E3DED8"
                        android:textColor="@color/black"
                        android:textSize="20sp" />

                    <RadioButton
                        android:id="@+id/radio_trading_by_money"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="24dp"
                        android:fontFamily="@font/pt_sans"
                        android:gravity="center"
                        android:letterSpacing="0.15"
                        android:text="@string/trading_money"
                        android:textColor="@color/white_E3DED8"
                        android:textSize="16sp" />
                    <!--                android:textColor="@{viewModel.invalidCheckout != null ? (viewModel.selectedTimeRadio == 0 ? @color/red_d0021b : @color/white_E3DED8) : @color/white_E3DED8}"-->

                    <EditText
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="20dp"
                        android:background="@color/white_E3DED8"
                        android:textColor="@color/black"
                        android:textSize="20sp" />

                    <RadioButton
                        android:id="@+id/radio_trading_by_service"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="24dp"
                        android:fontFamily="@font/pt_sans"
                        android:gravity="center"
                        android:letterSpacing="0.15"
                        android:text="@string/trading_service"
                        android:textColor="@color/white_E3DED8"
                        android:textSize="16sp" />
                    <!--                android:textColor="@{viewModel.invalidCheckout != null ? (viewModel.selectedTimeRadio == 0 ? @color/red_d0021b : @color/white_E3DED8) : @color/white_E3DED8}"-->

                    <EditText
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="20dp"
                        android:background="@color/white_E3DED8"
                        android:textColor="@color/black"
                        android:textSize="20sp" />

                    <RadioButton
                        android:id="@+id/radio_trading_free"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="24dp"
                        android:fontFamily="@font/pt_sans"
                        android:gravity="center"
                        android:letterSpacing="0.15"
                        android:text="@string/trading_free"
                        android:textColor="@color/white_E3DED8"
                        android:textSize="16sp" />

                </RadioGroup>

                <TextView
                    android:id="@+id/choose_trading_style_selecting"
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/bg_round_button"
                    android:gravity="center"
                    android:text="送出"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/radios_choose_trading_style" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>