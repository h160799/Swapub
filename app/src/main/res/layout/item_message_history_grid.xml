<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="message"
            type="com.johnny.swapub.data.ChatRoom" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/item_message_history_grid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/message_bac"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:scaleType="centerCrop"
            android:layout_marginTop="15dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@drawable/bg_round_button"/>

        <com.mikhaellopez.circularimageview.CircularImageView
            android:id="@+id/user_head"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toTopOf="@id/message_bac"
            app:layout_constraintStart_toStartOf="@id/message_bac"
            android:layout_marginLeft="10dp"
            tools:src="@drawable/ic_nav_profile_selected" />

        <TextView
            android:id="@+id/message_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            android:fontFamily="@font/pt_sans"
            android:textColor="@color/gray_575855"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:layout_marginStart="5dp"
            app:layout_constraintStart_toEndOf="@id/user_head"
            app:layout_constraintTop_toTopOf="@id/message_bac"
            android:layout_marginLeft="5dp"
            tools:text="Johnny Lin" />

        <TextView
            android:id="@+id/message_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:fontFamily="@font/pt_sans"
            android:textColor="@color/gray_575855"
            android:layout_marginTop="13dp"
            app:layout_constraintStart_toStartOf="@id/message_name"
            app:layout_constraintTop_toBottomOf="@id/message_name"
            tools:text="來我的志工活動 8 小時..." />

        <TextView
            android:id="@+id/message_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="7dp"
            android:fontFamily="@font/pt_sans"
            android:textColor="@color/gray_575855"
            android:layout_marginEnd="10dp"
            app:layout_constraintEnd_toEndOf="@id/message_bac"
            app:layout_constraintTop_toTopOf="@id/message_name"
            tools:text="2020-11-24 18:35"
            android:layout_marginRight="10dp" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>