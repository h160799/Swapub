<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/item_wish_news_grid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/gray_575855">

        <ImageView
            android:id="@+id/news_image"
            android:layout_width="350dp"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/news_content"
            android:background="@color/white_E3DED8"/>

        <com.mikhaellopez.circularimageview.CircularImageView
            android:id="@+id/user_head"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="@id/news_image"
            tools:src="@drawable/ic_nav_profile_selected" />

        <TextView
            android:id="@+id/mews_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13dp"
            android:fontFamily="@font/pt_sans"
            android:textColor="@color/white_E3DED8"
            android:textStyle="bold"
            android:layout_marginStart="5dp"
            app:layout_constraintStart_toEndOf="@id/user_head"
            app:layout_constraintTop_toTopOf="@id/user_head"
            tools:text="Johnny Lin"
            android:layout_marginLeft="5dp" />

        <TextView
            android:id="@+id/message_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="9dp"
            android:fontFamily="@font/pt_sans"
            android:textColor="@color/white_E3DED8"
            android:layout_marginStart="5dp"
            app:layout_constraintStart_toEndOf="@id/user_head"
            app:layout_constraintBottom_toBottomOf="@id/user_head"
            tools:text="2 小時"
            android:layout_marginLeft="5dp" />

        <TextView
            android:id="@+id/news_content"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:fontFamily="@font/pt_sans"
            android:textColor="@color/white_E3DED8"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toStartOf="@id/user_head"
            app:layout_constraintTop_toBottomOf="@id/user_head"
            tools:text="招募「志工」，協助聖誕活動 3小時．以 「 兒童書桌」作為交易．" />

        <View
            android:layout_width="match_parent"
            android:layout_height="6dp"
            android:background="@color/white_E3DED8"
            android:layout_marginTop="15dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/news_image"/>





    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>