<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    //第一組item 圓角邊框。
    <item>
        <shape>
            <stroke
                android:width="1dp"
                android:color="@color/black" />		//邊框線顏色
            <corners android:radius="0dp" />		//圓角度數
            <solid android:color="@color/white" >		//背景顏色
            </solid>
            <padding android:right="5dp" />		//邊距
        </shape>
    </item>
    //第二組item 插入圖片(spinner箭頭)
    <item>
        <bitmap
            android:gravity="right"
            android:src="@drawable/outline_arrow_drop_down_black_18dp" />
    </item>
</layer-list>